{% extends "_layout.twig" %}

{% block title %}Shift Report{% endblock %}

{% block content %}
<div class="report-container">
    <div class="report-header">
        <h1>Shift Report</h1>
        <div class="report-info">
            <p id="report-date">Date: {{ now|date('F d, Y') }}</p>
            {% set currentShift = craft.app.request.getQueryParam('shift') ?? 'day' %}
            <p id="report-shift">Shift: {{ currentShift == 'day' ? 'Day Shift (08:00 - 20:00)' : 'Night Shift (20:00 - 08:00)' }}</p>
            <p>Report Generated: <span id="generation-time">{{ now|date('F d, Y H:i:s') }}</span></p>
        </div>
        
        <div class="report-summary">
            {% set currentDate = craft.app.request.getQueryParam('date') ?? now|date('Y-m-d') %}
            {% set allTasks = craft.entries()
                .section('tasks')
                .fd_date(currentDate)
                .fd_shift(currentShift)
                .all() %}
                
            {% set completedTasks = craft.entries()
                .section('tasks')
                .fd_status('completed')
                .fd_date(currentDate)
                .fd_shift(currentShift)
                .all() %}
                
            {% set pendingTasks = craft.entries()
                .section('tasks')
                .fd_status('pending')
                .fd_date(currentDate)
                .fd_shift(currentShift)
                .all() %}
            
            <div class="summary-box">
                <span class="summary-label">Total Tasks:</span>
                <span id="total-tasks" class="summary-value">{{ allTasks|length }}</span>
            </div>
            <div class="summary-box">
                <span class="summary-label">Completed:</span>
                <span id="completed-count" class="summary-value">{{ completedTasks|length }}</span>
            </div>
            <div class="summary-box">
                <span class="summary-label">Pending:</span>
                <span id="pending-count" class="summary-value">{{ pendingTasks|length }}</span>
            </div>
        </div>
    </div>
    
    <div class="report-content">
        <h2>Task Details</h2>
        <table class="report-table">
            <thead>
                <tr>
                    <th>Task Type</th>
                    <th>From Department</th>
                    <th>To Department</th>
                    <th>Transport</th>
                    <th>Time Received</th>
                    <th>Time Allocated</th>
                    <th>Time Completed</th>
                    <th>Staff Member</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody id="tasks-report-body">
                {% if allTasks|length > 0 %}
                    {% for task in allTasks %}
                        <tr class="{{ task.fd_status }}">
                            <td>{{ task.fd_itemType.one().title ?? 'Unknown' }}</td>
                            <td>{{ task.fd_fromDepartment.one().title ?? 'Unknown' }}</td>
                            <td>{{ task.fd_toDepartment.one().title ?? 'Unknown' }}</td>
                            <td>{{ task.fd_transportType ?? '-' }}</td>
                            <td>{{ task.fd_time_received }}</td>
                            <td>{{ task.fd_time_allocated ?? '-' }}</td>
                            <td>{{ task.fd_time_completed ?? '-' }}</td>
                            <td>{{ task.fd_staffMember.one() ? task.fd_staffMember.one().title ~ ' ' ~ task.fd_staffMember.one().fd_surname : 'Unassigned' }}</td>
                            <td>{{ task.fd_status|capitalize }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="9" class="empty-state">No tasks for this shift.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    
    <div class="report-actions">
        <button id="print-report" class="action-btn">Print Report</button>
        <button id="archive-shift" class="warning-btn">Archive Shift</button>
    </div>
    
    <div class="back-link">
        <a href="{{ siteUrl }}">‚Üê Back to Home</a>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Print report button
    const printBtn = document.getElementById('print-report');
    if (printBtn) {
        printBtn.addEventListener('click', function() {
            window.print();
        });
    }
    
    // Archive shift button - this would typically move tasks to an archived status
    // Since we're not implementing custom PHP, this is a placeholder that just returns home
    const archiveBtn = document.getElementById('archive-shift');
    if (archiveBtn) {
        archiveBtn.addEventListener('click', function() {
            if (confirm('Are you sure you want to archive this shift? This will mark all tasks as archived.')) {
                // In a full implementation, this would call an action to update task statuses
                alert('Shift archived successfully!');
                window.location.href = '{{ siteUrl }}';
            }
        });
    }
});
</script>
{% endblock %}

{% block additionalStyles %}
<style>
@media print {
    .back-link, .report-actions {
        display: none;
    }
    
    .report-container {
        padding: 1cm;
    }
    
    .report-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .report-table th, .report-table td {
        border: 1px solid #000;
        padding: 5px;
    }
    
    .pending {
        background-color: #f8f9fa !important;
        -webkit-print-color-adjust: exact;
    }
    
    .completed {
        background-color: #e6f7e6 !important;
        -webkit-print-color-adjust: exact;
    }
}
</style>
{% endblock %}
