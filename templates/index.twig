{% extends "_layout.twig" %}

{% block title %}Porter{% endblock %}

{% block content %}
<div class="simple-screen">
    <div class="simple-header">
        <input type="date" id="current-date" class="date-input">
        <div class="shift-selector">
            <button class="shift-btn active" data-shift="day">Day</button> / 
            <button class="shift-btn" data-shift="night">Night</button>
        </div>
    </div>
    
    <div class="main-button">
        <button id="new-task-btn">New Task</button>
    </div>
    
    <div class="bottom-buttons">
        <button id="pending-tasks-btn">Pending Tasks</button>
        <button id="completed-tasks-btn">Completed Tasks</button>
        <button id="shift-complete-btn" class="shift-btn">Shift Complete</button>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="{{ alias('@web') }}/src/js/index.js"></script>
{% endblock %}
